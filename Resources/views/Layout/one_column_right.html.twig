{% extends "CSCoreBundle:Layout:base.html.twig" %}

{% set sidebar_width = sidebar_width|default(3) %}
{% set content_width = content_width|default(0) ? content_width : 12 - sidebar_width %}

{% block body %}
	<section class="col-md-{{ content_width }}">
		{{ block("content") }}
	</section>
	<aside class="col-md-{{ sidebar_width }}">
		{{ block('sidebar') }}
	</aside>
{% endblock body %}
